@using exp_4_Models.Models
@model Shipper
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Shipper Ekle</h2>

@if (ViewBag.Mesaj != null)
{
    <div id="alertBox" class="alert alert-danger" role="alert">
        @ViewBag.Mesaj
    </div>
}

@using (Html.BeginForm("Add", "Shipper", FormMethod.Post))
{
    <div class="mb-3">
        @Html.LabelFor(x => x.CompanyName, htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.CompanyName, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CompanyName, "", htmlAttributes: new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(x => x.Phone, htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Phone, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Phone, "", htmlAttributes: new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
}
