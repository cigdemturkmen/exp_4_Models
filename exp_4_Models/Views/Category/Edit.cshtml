@using exp_4_Models.Models
@model Category
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategori Düzenle</h2>

@*@if (ViewBag.Mesaj != null)
{
<div id="alert-box" class="alert alert-danger" role="alert">
    @ViewBag.Mesaj
</div>
}*@

@using (Html.BeginForm("Edit", "Category", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(x => x.CategoryID)
    <div class="mb-3">
        @Html.LabelFor(x => x.CategoryName, htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.CategoryName, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryName, "", htmlAttributes: new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(x => x.Description, htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Description, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Description, "", htmlAttributes: new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
}
