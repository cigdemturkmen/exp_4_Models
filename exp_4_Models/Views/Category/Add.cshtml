@using exp_4_Models.Models

@model Category
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategori Ekle</h2>

@if (ViewBag.Mesaj != null)
{
    <div id="alertBox" class="alert alert-danger" role="alert">
        @ViewBag.Mesaj
    </div>
}


@using (Html.BeginForm("Add", "Category", FormMethod.Post))
{
    @Html.AntiForgeryToken()


    <div class="mb-3">
        @Html.LabelFor(x => x.CategoryName, htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.CategoryName, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryName, "", htmlAttributes: new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(x => x.Description, htmlAttributes: new { @class = "form-label" })
        @Html.TextAreaFor(x => x.Description, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Description, "", htmlAttributes: new { @class = "text-danger" })
    </div>


    <button type="submit" class="btn btn-primary">Kaydet</button>

    @section scripts {
        @*bu sayfaya özel scriptler buraya...*@
@*<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>*@
    }


}

