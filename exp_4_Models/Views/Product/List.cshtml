@using exp_4_Models.Models
@model List<Product>
@{
    ViewBag.Title = "List";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-6"><h2>Ürün Listesi</h2></div>
            <div class="col-6"><a href="/product/add" class="btn btn-success float-right">Yeni Ürün Ekle</a></div>
        </div>
    </div>

    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Ürün Id</th>
                    <th>Ürün Adı</th>
                    <th>Birim Fiyatı</th>
                    <th>Stok Miktarı</th>
                    <th>Kategori Id</th>
                    <th colspan="2">İşlemler</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ProductID</td>
                        <td>@product.ProductName</td>
                        <td>@product.UnitPrice</td>
                        <td>@product.UnitsInStock</td>
                        <td>@product.CategoryId</td>
                        <td>Düzenle</td>
                        <td>Sil</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>